generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int              @id @default(autoincrement())
  guid            String           @unique
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  email           String           @unique
  phone           String           @unique
  firstName       String
  lastName        String
  password        String
  household       Household?       @relation(fields: [householdId], references: [id])
  householdId     Int?
  responsibilites Responsibility[]
  refreshToken    String?
}

model Household {
  id          Int      @id @default(autoincrement())
  displayName String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  address     Address? @relation(fields: [id], references: [id])
  tasks       Task[]
  members     User[]
}

model Address {
  id           Int         @id @default(autoincrement())
  streetName   String
  streetNumber Int
  postalCode   String
  state        String
  city         String
  country      String
  household    Household[]
}

model Task {
  id            Int       @id @default(autoincrement())
  householdTask Household @relation(fields: [id], references: [id])
}

model Responsibility {
  id           Int    @id @default(autoincrement())
  assignedUser User   @relation(fields: [id], references: [id])
  description  String
}
